.User-registration
  = render 'shared/header'
  .User-registration__title
    %i.fa.fa-user &nbsp; 登録する
  .User-registration__main
  = form_with model: @user, as: resource_name, url: registration_path(resource_name), local: true, class: "User-registration__main" do |f|
    = render "devise/shared/error_messages", resource: resource
    %label.label name
    %br
    = f.text_field(:name, class: "text-field", placeholder: "名前を入力してください")
    %br
    %br
    %label.label email
    %br
    = f.email_field(:email, class: "text-field", placeholder: "PC・携帯どちらでも可")
    %br
    %br
    %label.label password
    %br
    = f.password_field(:password, class: "text-field", placeholder: "6文字以上")
    %br
    %br
    %label.label password*
    %br
    = f.password_field(:password_confirmation, class: "text-field", placeholder: "6文字以上")
    %br
    %br
    .User-registration__main__submit
      = f.submit "送信", class: "submit-button"
= render 'shared/footer'
